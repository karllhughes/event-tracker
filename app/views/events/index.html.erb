<%= render template: "events/components/order" %>
<div class="row">
  <% @events.each_with_index do |event, index| %>
    <div class="col-md-4">
      <div id="card-<%= index %>" class="card">
        <div class="card-block">
          <h4 class="card-title">
            <%= link_to event.title, event_path(event) %>
          </h4>
          <%= render template: "events/components/meta", locals: {event: event} %>
          <%= link_to "Details", event_path(event), class: "btn btn-primary" %>
          <%= link_to "Edit", edit_event_path(event), class: "btn btn-warning" %>
        </div>
      </div>
    </div>
    <% if (index + 1) % 3 == 0 %>
      </div><div class="row">
    <% end %>
  <% end %>
</div>

<%= link_to 'Create event', new_event_path %>
