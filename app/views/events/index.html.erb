<div class="row">
  <% @events.each_with_index do |event, index| %>
    <div class="col-md-4">
      <div id="card-<%= index %>" class="card">
        <div class="card-block">
          <h4 class="card-title"><%= event.title %></h4>
          <p class="card-text">Start Date: <%= event.starts_at.strftime("%A, %B %d, %Y") %></p>
          <p class="card-text">Registration Start Date: <%= event.registration_starts_at.strftime("%A, %B %d, %Y") %></p>
          <p class="card-text">Registration Dnd Date: <%= event.registration_ends_at.strftime("%A, %B %d, %Y") %></p>
          <p class="card-text">Location: <%= event.location %></p>
          <p class="card-text">Cost: $<%= event.cost %></p>
          <%= link_to "Details", event_path(event), class: "btn btn-primary"  %>
          <%= link_to "Edit", edit_event_path(event), class: "btn btn-warning"  %>
        </div>
      </div>
    </div>
    <% if (index + 1) % 3 == 0 %>
      </div><div class="row">
    <% end %>
  <% end %>
</div>

<%= link_to 'Create event', new_event_path %>
